{
  "manifest_version": 3,
  "name": "History RecALI",
  "version": "0.2.0",
  "description": "Privacy-first AI history companion: summarize, search, and score credibility of your browsing",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": [
    "http://127.0.0.1/*",
    "http://localhost/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "History RecALI"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}